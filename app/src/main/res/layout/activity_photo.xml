<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.item.demo.activity.http.PhotoActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_photo"
        android:layout_width="@dimen/len_83"
        android:layout_height="@dimen/len_83"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/len_25"
        android:src="@drawable/image_weibo_home_2"
        app:civ_border_color="@color/bg_white"
        app:civ_border_width="@dimen/len_2" />

    <Button
        android:id="@+id/btn_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传图片" />
</LinearLayout>
