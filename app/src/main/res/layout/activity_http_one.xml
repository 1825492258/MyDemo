<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.item.demo.activity.http.HttpOneActivity">

    <Button
        android:id="@+id/btn_http_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送验证码" />

    <Button
        android:id="@+id/btn_http_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录" />

    <Button
        android:id="@+id/btn_http_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="解析" />

    <com.item.demo.utils.view.LQRRefreshButton
        android:id="@+id/btn_refresh"
        android:layout_width="118dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="8dp"
        app:refresh_btn_borderRadius="25dp"
        app:refresh_btn_borderWidth="1dp"
        app:refresh_btn_iconSize="16dp"
        app:refresh_btn_text="点击换一批"
        app:refresh_btn_textColor="#f00"
        app:refresh_btn_textSize="14sp" />
</LinearLayout>
