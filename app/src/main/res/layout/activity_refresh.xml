<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:srlEnablePureScrollMode="true"

    tools:context="com.item.demo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_text_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义Header" />

        <Button
            android:id="@+id/btn_text_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="基本使用" />

        <Button
            android:id="@+id/btn_text_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ListView悬浮头展示" />

        <Button
            android:id="@+id/btn_text_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="仿QQ空间的样式" />

    </LinearLayout>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>
